{% extends '::base.html.twig' %}

{% block body -%}
    <h1>PurchaseOrder</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Order_number</th>
                <td>{{ entity.ordernumber }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Total_cost</th>
                <td>{{ entity.totalcost }}</td>
            </tr>
            <tr>
                <th>Total_discount</th>
                <td>{{ entity.totaldiscount }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('purchaseorder') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('purchaseorder_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
